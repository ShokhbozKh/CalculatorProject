                Grid.Row="2"
                Grid.Column="2"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Content="&#x277e;"
                FontSize="20" />
            <Button
                Grid.Row="2"
                Grid.Column="3"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Content="&#x2217;"
                FontSize="20" />

            <!--  4 row  -->
            <Button
                Grid.Row="3"
                Grid.Column="0"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_Click4"
                Content="&#x2779;"
                FontSize="20" />
