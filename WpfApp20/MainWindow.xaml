                Grid.Row="2"
                Grid.Column="3"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickKupay"
                Content="&#x2217;"
                FontSize="20" />

            <!--  5 row  -->
            <Button
                Grid.Row="4"
                Grid.Column="0"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_Click1"
                Content="&#x2776;"
                FontSize="20" />
            <Button
                Grid.Row="4"
                Grid.Column="1"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_Click2"
                Content="&#x2777;"
                FontSize="20" />
