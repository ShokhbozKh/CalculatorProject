                Grid.Column="3"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickBittaBittaUchirish"
                Content="&#x232b;"
                FontSize="20" />

            <!--  2 row  -->
            <Button
                Grid.Row="1"
                Grid.Column="0"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickBirBuluv"
                Content="1/x"
                FontSize="20" />
            <Button
                Grid.Row="1"
                Grid.Column="1"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickKvadrat"
                Content="XX&#x2082;"
                FontSize="20" />
            <Button
                Grid.Row="1"
                Grid.Column="2"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickIldiz"
                Content="&#x221a;"
                FontSize="20" />
            <Button
                Grid.Row="1"
                Grid.Column="3"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickBuluv"
                Content="&#xf7;"
                FontSize="20" />

            <!--  3 row  -->
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Content="&#x277c;"
                FontSize="20" />
