                Grid.Row="4"
                Grid.Column="2"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_Click3"
                Content="&#x2778;"
                FontSize="20" />
            <Button
                Grid.Row="4"
                Grid.Column="3"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickPlus"
                Content="+"
                FontSize="20" />

            <!--  6 row  -->
            <Button
                Grid.Row="5"
                Grid.Column="0"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickIshora"
                Content="+/-"
                FontSize="20" />
