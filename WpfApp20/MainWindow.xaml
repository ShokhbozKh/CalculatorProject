                Content="."
                FontSize="20"
                FontWeight="Black" />
            <Button
                Grid.Row="5"
                Grid.Column="3"
                Margin="4,4,4,4"
                BorderBrush="BlueViolet"
                BorderThickness="4"
                Click="Button_ClickTeng"
                Content="="
